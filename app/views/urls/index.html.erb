<div class="container mx-auto px-4 py-8 space-y-4">
  <h1 class="text-2xl font-bold mb-4">URL Shortener</h1>

  <div id="url-form">
    <%= render partial: "urls/form", locals: { url: @url } %>
  </div>

  <div id="success-message">
    <%= render partial: "urls/success_message", locals: { url: @url1, short_url: @shorturl } if @shorturl %>
  </div>

  <div id="urls-table">
    <%= render partial: "urls/table", locals: { urls: @urls } %>
  </div>
</div>